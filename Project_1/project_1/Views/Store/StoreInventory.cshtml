@model IEnumerable<ModelLayer.ViewModels.StoreViewModel>
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = "StoreInventory";
}

<h1>StoreInventory</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.productId)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.productName)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.qty)
            </th>
            <th>Wanted Qty</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td align="center">
                @Html.DisplayFor(modelItem => item.productId)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.productName)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.qty)
            </td>
            <td>
                qty: <input type="number" name="qty" placeholder="1" />
                <input type="hidden" name="" value="@item.productId" readonly />
                <input type="hidden" name="" value="@item.productName" readonly />
                <button type="submit" asp-controller="Cart" asp-action="AddToCart">Add To Cart</button>
            </td>
            
            @if ((await AuthorizationService.AuthorizeAsync(User, "IsAdmin")).Succeeded)
            {
            <td>
                @Html.ActionLink("EditProduct", "EditProduct", new { /* id=item.PrimaryKey */ }) | 
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) | 
                @Html.ActionLink("DeleteProduct", "DeleteProduct", new { /* id=item.PrimaryKey */ })
            </td>
            }
            else
            {
                <td>
                    <a></a>
                </td>
            }
                
            </tr>
        }
    </tbody>
</table>
